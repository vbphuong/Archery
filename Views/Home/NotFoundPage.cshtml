@{
    ViewData["Title"] = "Page Not Found";
    Layout = ViewData["Layout"] as string;
}

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Archery</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/nav.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/notfound.css" asp-append-version="true" /> <!-- Thêm file CSS mới -->
    <link rel="stylesheet" href="~/Archery.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
</head>

<body>
    <div class="notfound-container">
        <div class="row justify-content-center w-100">
            <div class="col-md-8 col-lg-6 col-xl-4">
                <div class="card p-5 shadow-lg text-light" style="border-radius:20px; background:rgba(0,0,0,0.5); min-width:350px;">
                    <h2 class="notfound-title text-center mb-4 animate__animated animate__bounceIn">Page Not Found</h2>
                    <div class="text-center">
                        <img src="/img/404.png" alt="404 Not Found" class="img-fluid mb-4 animate__animated animate__zoomIn" style="max-width: 300px; height: auto;">
                        <p class="lead">Oops, this page does not exist.</p>
                        <a href="/Home/Index" class="btn btn-custom notfound-btn w-100 animate__animated">
                            <i class="fas fa-home"></i> Back to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="background-particles"></div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>$(document).ready(function () {
            // Hiệu ứng click cho nút Back
            $(".notfound-btn").on("click", function () {
                $(this).addClass('animate__pulse');
                setTimeout(() => $(this).removeClass('animate__pulse'), 500);
            });
        });</script>
</body>
</html>