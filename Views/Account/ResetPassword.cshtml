@{
    ViewData["Title"] = "Reset Password";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Reset Password</h2>
        <form id="resetForm">
            <div class="mb-3">
                <label for="currentPassword">Current Password</label>
                <input type="password" class="form-control" id="currentPassword" required />
            </div>
            <div class="mb-3">
                <label for="newPassword">New Password</label>
                <input type="password" class="form-control" id="newPassword" required />
            </div>
            <div class="mb-3">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" class="form-control" id="confirmPassword" required />
            </div>
            <button type="submit" class="btn btn-primary">Reset</button>
        </form>
        <div id="resetError" class="text-danger mt-2" style="display:none;"></div>
    </div>
</div>

@section Scripts {
    <script>$(document).ready(function () {
        function getToken() { return localStorage.getItem('jwtToken'); }

        $("#resetForm").submit(function (e) {
            e.preventDefault();

            var dto = {
                currentPassword: $("#currentPassword").val(),
                newPassword: $("#newPassword").val(),
                confirmPassword: $("#confirmPassword").val()
            };

            if (dto.newPassword !== dto.confirmPassword) {
                $("#resetError").text("Passwords do not match").show();
                return;
            }

            $.ajax({
                url: '/api/AccountAPI/ResetPassword',
                type: 'POST',
                contentType: 'application/json',
                headers: { 'Authorization': 'Bearer ' + getToken() },
                data: JSON.stringify(dto),
                success: function () {
                    alert("Password has been changed. Please login again.");
                    localStorage.removeItem('jwtToken');
                    window.location.href = '/Account/Login';
                },
                error: function (xhr) {
                    $("#resetError").text(xhr.responseText || "Error resetting password").show();
                    if (xhr.status === 401) {
                        localStorage.removeItem('jwtToken');
                        window.location.href = '/Account/Login';
                    }
                }
            });
        });
    });</script>
}
